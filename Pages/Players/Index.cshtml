@page
@model Players.IndexModel
@{
}

<div class="jumbotron p-2 d-flex">
    <h2 class="mr-auto display-3">
        <img src="/image/nfl/nfl.png" />
        Players
    </h2>
    <form class="d-flex">
        <div class="form-group pr-2">
            <label class="col-form-label" asp-for="SelectedTeam">
                Team:
            </label>
            <select class="form-control" asp-for="SelectedTeam" asp-items="@Model.TeamOptions"></select>
        </div>
        <div class="form-group pr-2">
            <label class="col-form-label" asp-for="SelectedPosition">
                Position
            </label>
            <select class="form-control" asp-for="SelectedPosition" asp-items="@Model.PositionOptions"></select>
        </div>
        <div class="form-group pr-2">
            <label class="col-form-label" asp-for="SearchString">Name:</label>
            <input class="form-control" type="text" asp-for="SearchString" />
            <input class="form-control" type="submit" value="Search" />
        </div>
        <div class="form-group">

        </div>
    </form>
</div>


<section class="grid">
    <div class="d-flex bg-primary text-white">
        <div class="p-1" style="flex:0 0 10%">
            Team
        </div>
        <div class="p-1" style="flex:0 0 10%">
            Number
        </div>
        <div class="p-1" style="flex:0 0 25%">
            Name
        </div>
        <div class="p-1" style="flex:0 0 10%">
            Position
        </div>
        <div class="p-1" style="flex:0 0 20%">
            Experience
        </div>
        <div class="p-1" style="flex:0 0 25%">
            College
        </div>
    </div>
    @foreach(Player player in Model.Players)
    {
        <a class="d-flex starter" asp-page="./Player" asp-route-id="@player.PlayerId">
            <div class="p-1" style="flex:0 0 10%">
                @player.TeamId
            </div>
            <div class="p-1" style="flex:0 0 10%">
                @player.Number
            </div>
            <div class="p-1" style="flex:0 0 25%">
                @player.Name
            </div>
            <div class="p-1" style="flex:0 0 10%">
                @player.Position
            </div>
            <div class="p-1" style="flex:0 0 20%">
                @player.Experience
            </div>
            <div class="p-1" style="flex:0 0 25%">
                @player.College
            </div>
        </a>
    }
</section>