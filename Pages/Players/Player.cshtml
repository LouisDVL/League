@page "{id}"
@model Players.PlayerModel
@{
}

<div class="jumbotron p-2">
    <h1 class="display-4">
        <img src=@Model.PlayerLogo>
        @Model.Player.Number
        @Model.Player.Name
    </h1>
</div>

<div>
    @Model.Player.Position
</div>
<hr />
<div>
    Rating: @Model.Player.Rating
</div>
<div>
    Rank: @Model.Player.Rank
</div>
<div>
    Depth: @Model.Player.Depth
</div>

<hr />
<div>
    Experience: @Model.Player.Experience
</div>
<div>
    College: @Model.Player.College
</div>
<div>
    Draft: @Model.Player.DraftYear - @Model.Player.DraftRound - @Model.Player.DraftPick
</div>

<hr />
<div>
    Height: @Model.Player.Height
</div>
<div>
    Weight: @Model.Player.Weight
</div>
<div>
    Age: @Model.Player.Age
</div>
<div>
    Age: @Model.Player.BirthDate
</div>